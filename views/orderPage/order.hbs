<link href="css/account.css" rel="stylesheet">
<link href="css/order.css" rel="stylesheet">
<div class="nav-bar-order">
    <h1 style="color: red; ">ĐƠN HÀNG CỦA BẠN</h1>
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active order-active" id="all-order-tab" data-toggle="tab" href="#all-order" role="tab"
                aria-controls="home" aria-selected="true">Tất cả</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="transporting-tab" data-toggle="tab" href="#transporting" role="tab"
                aria-controls="transporting" aria-selected="false">Chờ giao hàng</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="transported-tab" data-toggle="tab" href="#transported" role="tab"
                aria-controls="transported" aria-selected="false">Đã giao</a>
        </li>
    </ul>
</div>
<div class="row">
    <div class="tab-content profile-tab" id="orderTabContent">
        <div class="tab-pane fade show active" id="all-order" role="tabpanel" aria-labelledby="all-order-tab">
            <div class="orders">
            </div>
        </div>
        <div class="tab-pane fade" id="transporting" role="tabpanel" aria-labelledby="transporting-tab">
            Đang giao
        </div>
        <div class="tab-pane fade" id="transported" role="tabpanel" aria-labelledby="transported-tab">
            Đã giao
        </div>
    </div>
</div>
<script src="js/order.js"></script>
<script id="order-template" type="text/x-handlebars-template">
    \{{#each this}}
    <div class="order">
        <div class="order-info">
            <div>
                <a style="color: black;" href="/order/\{{orderId}}"><i class="fas fa-wallet"></i> Đơn hàng: <span class="order-id">\{{orderId}}</span></a>
                <p class="day-order" style="color: black">Ngày tạo: <span style="color: #0062cc;">\{{createDate}}</span></p>
                <p style="color: black">Trạng thái: <span style="color: #0062cc;">\{{status}} </span>  </p>
            </div>
            <div>
                <a href="/order/\{{orderId}}" class="btn btn-default hvr-hover btn-cart">Quản lý đơn hàng</a>
            </div>
        </div>
        \{{#each books}}
        <div class="item">
            <div class="item-image"><img
                src="\{{image_link}}"
                class="order-book-image"></img> </div>
            <div class="item-title">\{{title}}</div>
            <div class="item-quantity">Số lượng: \{{quantity}}</div>
        </div>
        \{{/each}}
    </div>
    \{{/each}}
</script>