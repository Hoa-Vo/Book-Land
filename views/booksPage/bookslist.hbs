<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="js/helper.js"></script>
<div class="shop-box-inner">
	<div class="container">
		<div class="row">
			<div class="col-xl-3 col-lg-3 col-sm-12 col-xs-12 sidebar-shop-left">
				<div class="product-categori">
					<div class="search-product">
						<form action="/bookslist/search" method="GET">
							<input class="form-control" name="bookName" placeholder="Tìm kiếm..." type="text">
							<input id="searchText" type="hidden" value="{{bookName}}">
							<button type="submit"> <i class="fa fa-search"></i> </button>
						</form>
					</div>
					<div class="filter-sidebar-left">
						<div class="title-left">
							<h3>Thể loại</h3>
						</div>
						<div class="list-group list-group-collapse list-group-sm list-group-tree" id="list-group-men"
							data-children=".sub-men">
							<div class="list-group-collapse sub-men">
								<a href="/bookslist/" class="list-group-item" aria-expanded="true"
									aria-controls="sub-men1">Tất cả <small class="text-muted"></small>
								</a>
								<div class="collapse show" id="sub-men1" data-parent="#list-group-men">
									<p id="category_id" style="display: none;">{{currentCategoryId}}</p>
									<div class="list-group">
										{{#each categories}}
											<a href="/bookslist?categoryID={{_id}}"
												class="list-group-item list-group-item-action active">{{name}}
												<small class="text-muted">({{count}})</small></a>
										{{/each}}
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="filter-price-left">
						<div class="title-left">
							<h3>Giá</h3>
						</div>
						<div class="price-box-slider">
							<div id="slider-range"></div>
							<p>
								<input type="text" id="amount" readonly
									style="border:0; color:#fbb714; font-weight:bold;">
								<button class="btn hvr-hover" type="submit">Lọc</button>
							</p>
						</div>
					</div>
					<div class="filter-brand-left">
						<div class="title-left">
							<h3>Nhà xuất bản</h3>
						</div>
						<div class="brand-box">
							<ul>
								<li>
									<div class="radio radio-danger">
										<input name="survey" id="Radios1" value="Yes" type="radio">
										<label for="Radios1"> Nhã Nam </label>
									</div>
								</li>
								<li>
									<div class="radio radio-danger">
										<input name="survey" id="Radios2" value="No" type="radio">
										<label for="Radios2"> Kim Đồng</label>
									</div>
								</li>
								<li>
									<div class="radio radio-danger">
										<input name="survey" id="Radios3" value="declater" type="radio">
										<label for="Radios3"> Trẻ </label>
									</div>
								</li>
								<li>
									<div class="radio radio-danger">
										<input name="survey" id="Radios4" value="declater" type="radio">
										<label for="Radios4"> Văn học </label>
									</div>
								</li>
								<li>
									<div class="radio radio-danger">
										<input name="survey" id="Radios5" value="declater" type="radio">
										<label for="Radios5"> Phụ nữ Việt Nam </label>
									</div>
								</li>
								<li>
									<div class="radio radio-danger">
										<input name="survey" id="Radios6" value="declater" type="radio">
										<label for="Radios6"> Giáo dục </label>
									</div>
								</li>
								<li>
									<div class="radio radio-danger">
										<input name="survey" id="Radios7" value="declater" type="radio">
										<label for="Radios7"> Đại học Quốc Gia Hà Nội</label>
									</div>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
			<div class="col-xl-9 col-lg-9 col-sm-12 col-xs-12 shop-content-right">
				<div class="right-product-box">
					<div class="product-item-filter row">
						<div class="col-12 col-sm-8 text-center text-sm-left">
							<div class="toolbar-sorter-right">
								<span>Sắp xếp</span>
								<select id="basic" class="selectpicker show-tick form-control" data-placeholder="$ USD">
									<option data-display="Select">Mới nhất</option>
									<option value="1">Phổ biến nhất</option>
									<option value="2">Giá thấp đến cao</option>
									<option value="3">Giá cao đến thấp</option>
									<option value="4">Bán chạy nhất</option>
								</select>
							</div>
							<p>Xêm tất cả 4 kết quả</p>
						</div>
						<div class="col-12 col-sm-4 text-center text-sm-right">
							<ul class="nav nav-tabs ml-auto">
								<li>
									<a class="nav-link active" href="#grid-view" data-toggle="tab"> <i
											class="fa fa-th"></i> </a>
								</li>
							</ul>
						</div>
					</div>
					<div class="row product-categorie-box">
						<div class="tab-content">
							<div role="tabpanel" class="tab-pane fade show active" id="grid-view">
								<div id="book-list" class="row">
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="button-bar">
				<nav aria-label="Page navigation example">
					<ul id="btn-list" class="pagination">
					</ul>
				</nav>
			</div>
		</div>
	</div>
</div>
<script src="js/paging.js"></script>
<script id="products" type="text/x-handlebars-template">
\{{#each this}}
	<div class="col-sm-6 col-md-6 col-lg-4 col-xl-4">
		<div class="products-single fix">
			<div class="box-img-hover">
				<img src="images/booksImage/\{{image_link}}" class="img-fluid book-image" alt="Image">
				<div class="mask-icon">
					<ul>
						<li><a href="/bookslist/\{{_id}}" data-toggle="tooltip" data-placement="right" title="Xem"><i
									class="fas fa-eye"></i></a></li>
						<li><a href="#" data-toggle="tooltip" data-placement="right" title="So sánh"><i
									class="fas fa-sync-alt"></i></a>
						</li>
						<li><a href="#" data-toggle="tooltip" data-placement="right" title="Thêm vào yêu thích"><i
									class="far fa-heart"></i></a>
						</li>
					</ul>
					<a class="cart" href="#">Thêm vào giỏ hàng</a>
				</div>
			</div>
			<div class="why-text">
				<h4>\{{title}}</h4>
				<h5>\{{basePrice}} VND</h5>
			</div>
		</div>
	</div>
\{{/each}}
</script>
<script id="paging-hbs" type="text/x-handlebars-template">
	<li id="prevBtn" class="page-item disabled" >
		<a   class="page-link " onclick="prevBtnClick()" aria-label="Previous">
			<span aria-hidden="true">&laquo;</span>
			<span class="sr-only">Previous</span>
		</a>
	</li>
	\{{#each this}}
		<li id="page-\{{num}}" onclick="setPage(this.textContent)" class="page-item"><a class="page-link">\{{num}}</a></li>
	\{{/each}}
	<li id="nextBtn" class="page-item">
		<a " class="page-link" onclick="nextBtnClick()" aria-label="Next">
			<span aria-hidden="true">&raquo;</span>
			<span class="sr-only">Next</span>
		</a>
	</li>
</script>
</div>
</div>